<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/contain_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_white_rounded"
        android:backgroundTint="@color/blue_7"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">


        <ImageView
            android:id="@+id/checked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_circle"
            android:backgroundTint="@color/blue_8"
            android:padding="8dp"
            android:src="@drawable/ic_checked" />

        <ImageView
            android:id="@+id/unchecked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_unchecked"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <technology.nine.cred.utills.customfonts.TextView.KumbhSansBoldTextView
                android:id="@+id/tx_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="5sp"
                android:text="\u20b9 4,247"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <technology.nine.cred.utills.customfonts.TextView.KumbhSansBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="5sp"
                android:paddingStart="5dp"
                android:text="/mo"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>

        <technology.nine.cred.utills.customfonts.TextView.KumbhSansBoldTextView
            android:id="@+id/tx_months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="for 12 months"
            android:textColor="@color/blue_3"
            android:textSize="13sp"
            android:textStyle="bold" />

        <technology.nine.cred.utills.customfonts.TextView.KumbhSansRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted_line_white"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:paddingTop="20dp"
            android:text="See calculations"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />


    </LinearLayout>

</RelativeLayout>